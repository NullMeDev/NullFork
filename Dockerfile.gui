FROM golang:1.18-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the GUI binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o gui ./cmd/gui/main.go

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/gui .

# Copy static files
COPY --from=builder /app/web ./web

# Expose port
EXPOSE 8081

# Run the GUI
CMD ["./gui"]
